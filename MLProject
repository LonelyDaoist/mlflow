name: mlflow

conda_env: conda.yaml

entry_points:
  download:
    command: "python core/data/download_data.py"

  etl:
    parameters:
      raw_data: path
    command: "python core/features/process_data.py {raw_data}"

  test_etl:
    parameters:
      processed_data: path
    command: "pytest tests/core/features/test_processed_data.py --processed_data {processed_data}"

  train:
    parameters:
      alpha: float
      l1_ratio: float
      processed_data: path
    command: "python core/models/train.py {alpha} {l1_ratio} {processed_data}"

  test_models:
    parameters:
      model: path
    command: "pytest tests/core/models/test_models.py --model {model}"

  main:
    parameters:
      alpha: float
      l1_ratio: float
      version: string
    command: "python main.py {alpha} {l1_ratio} {version}"
